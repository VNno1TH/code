import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.io.PrintWriter;
import java.util.StringTokenizer;
import java.util.TreeMap;




public class RestaurantCustomer
{
	public static void main(String[] args) throws IOException {
        BufferedReader in = new BufferedReader(new InputStreamReader(System.in));
        PrintWriter out = new PrintWriter(System.out);

        int n=Integer.parseInt(in.readLine());
        TreeMap<Integer,Integer> Customer_time=new TreeMap<>();
        for(int i=0;i<2*n;i+=2)
        {
            StringTokenizer tmp=new StringTokenizer(in.readLine());
            Customer_time.put(Integer.parseInt(tmp.nextToken()),1);
            Customer_time.put(Integer.parseInt(tmp.nextToken()),-1);
        }


        int temp=0,ans=0;
        for(var i: Customer_time.values())
        {
            temp+=i;
            ans=Integer.max(ans,temp);

        }
        out.println(ans);
        out.flush();
                
    }
}
